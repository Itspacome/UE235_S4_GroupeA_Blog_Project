{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form action="{{ path('app_login') }}" method="post" class="form_login w-75 ml-auto mr-auto">
    {% if error %}
        <div class="alert alert-danger">Erreur ! Pseudo ou mot de passe invalide, veuillez r√©essayer.</div>
    {% endif %}

    <h1 class="h3 mb-3 pt-5 ml-5 font-weight-normal">Connectez vous !</h1>
    <label for="inputPseudo">Pseudo : </label>
    <input type="text" value="{{ last_username }}" name="_username" id="inputPseudo" class=" mb-3 w-25 form-control" required autofocus>
    <label for="inputPassword">Mot de passe : </label>
    <input type="password" name="_password" id="inputPassword" class="w-25 mb-2  form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="pt-15 btn btn-lg btn-primary ml-5 mt-2" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
